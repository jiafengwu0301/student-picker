<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.softwareprocess.studentpicker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ca.softwareprocess.studentpicker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.softwareprocess.studentpicker.ListStudentsActivity"
            android:label="@string/title_activity_list_students" >
        </activity>
        <activity
            android:name="ca.softwareprocess.studentpicker.BulkImportActivity"
            android:label="@string/title_activity_bulk_import" >
        </activity>
    </application>

</manifest>
